<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.RegistrosUsuarios">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <!-- Barra superior -->
        <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#1B8D42"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Botón menú hamburguesa -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:padding="4dp" />

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registros Usuario"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="16dp"/>

            <!-- Ícono de usuario -->
            <ImageView
                android:layout_width="72dp"
                android:layout_height="60dp"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:src="@drawable/loginn" />
        </LinearLayout>

        <!-- Scroll para los campos -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">


                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="Ingresa tu nombre" />

                <!-- Apellido Paterno -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Apellido Paterno" />

                <EditText
                    android:id="@+id/txtPaterno"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="Ingresa tu apellido" />

                <!-- Apellido Materno -->
                <TextView
                    android:text="Apellido Materno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtMaterno"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="Ingresa tu apellido" />

                <!-- Matrícula -->
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Matrícula" />

                <!-- Contraseña -->
                <EditText
                    android:id="@+id/txtMatricula"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="Ingresa tu matrícula" />

                <TextView
                    android:text="Contraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="Ingresa tu contraseña"
                    android:inputType="textPassword" />

                <!-- Teléfono -->
                <TextView
                    android:text="Teléfono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Ingresa tu número"
                    android:inputType="phone" />

                <!-- Tipo de usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tipo Usuario" />

                <Spinner
                    android:id="@+id/spTipoUsuario"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content" />

                <!-- Botón Registrar -->
                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#00883E"
                    android:text="Registrar Usuario"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral (Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_lateral" />

</androidx.drawerlayout.widget.DrawerLayout>
